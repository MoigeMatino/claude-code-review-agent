  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "ts-node": "^1.7.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.0.0"
  }
}
